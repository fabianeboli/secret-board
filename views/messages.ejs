<!DOCTYPE html>
<html lang="en">
  <%- include head.ejs %>

  <body>
    <h1>Messages</h1>
    <% if(user) {%> <% for(const message of messages_list) { %>
    <div>
      <% if(user.membership === 'FullMember') { %>
      <h3><%= message.author %></h3>
      <% } %>
      <h3><%= message.title %> <em><%= message.timestamp %></em></h3>
      <p>
        <%= message.message %>
      </p>
      <% if(user.username == "admin") {%>
      <form action="/messages/<%= message.id %>/delete" method="POST">
        <button type="submit">DELETE</button>
      </form>

      <% } %>
    </div>

    <% } %>
    <button><a href="/">Return to main page</a></button>
    <% } else { %>
    <h1>YOU SHALL NOT PASSS!</h1>
    <% } %>
  </body>
</html>
